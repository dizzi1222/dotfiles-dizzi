# --- Comportamiento del Cursor ---

cursor-style = block 
# puede ser:
# cursor-style = underline    # Línea baja
# cursor-style = bar # Barra vertical
cursor-style-blink = false
# mover puntero del mouse, Alt+Click
cursor-click-to-move
shell-integration-features = no-cursor


#esconder mouse tras tipado
mouse-hide-while-typing = true


####################
### KEYBINDINGSS ###
####################
# cerrar tab
keybind = ctrl+;=close_surface
# cerrar windows
keybind = ctrl+shift+q=close_tab
#Dividir pantalla
#Para  horizontal (nueva ventana a la derecha):
keybind = ctrl+shift+enter=new_split:right
#Para división vertical (nueva ventana abajo):
keybind = shift+enter=new_split:down

# --- Navegación entre paneles/superficies ---
# (Opcional) Reordenar pestañas
keybind = ctrl+shift+left=move_tab:-1
keybind = ctrl+shift+right=move_tab:1

# Vista general de pestañas (como Ctrl+Tab moderno) 
# SOLO FUNCIONA.. CON EL MOUSE XD.... -.- .-.
keybind = ctrl+1=toggle_tab_overview

# Opción 1: Usa letras (estilo Vim)

# --- Navegación entre splits/paneles ---
keybind = alt+left=goto_split:left
keybind = alt+right=goto_split:right
keybind = alt+up=goto_split:up
keybind = alt+down=goto_split:down


# Navegar entre splits por orden de creación
keybind = ctrl+tab=goto_split:next
keybind = ctrl+shift+tab=goto_split:previous


